/* Implement a method to perform basic string compression using the counts of repeated characters. For example, the string aabcccccaaa would become a2b1c5a3.
If the "compressed" string would not become smaller than the original string, your method should return the original string. You can assume the string has only uppercase and lowercase letters */

/*JS*/


function stringCompression(s) {
    if(!s) return s;
    
    let compressed = [];
    let count=1;
    
    for(let i=1; i<=s.length; i++){
        if(i<s.length && s[i]===s[i-1]){
            count++;
        }else{
            compressed.push(s[i-1], String(count));
            count=1;
        }
    }
    

    let compressedString = compressed.join('');
    
    if(compressedString.length < s.length) return compressedString;
    
    return s;
    
    
    
    
};

console.log(stringCompression('aabcccccaaa'));
console.log(stringCompression('aAAAADDDDab'));
console.log(stringCompression('AAAAA'));
